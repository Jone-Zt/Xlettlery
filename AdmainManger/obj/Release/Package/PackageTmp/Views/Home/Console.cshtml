
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>控制台</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <script src="~/Scripts/echarts.min.js"></script>
</head>
<body>
    <div id="main" style="width: 60rem;height:40rem;float:left"></div>
    <div id="agent" style="width:30rem;height:20rem;float:left" ></div>
    <div id="online" style="width:30rem;height:20rem;overflow:hidden"></div>
    <script type="text/javascript">
        var myChart = echarts.init(document.getElementById('main'));
        var agent = echarts.init(document.getElementById('agent'));
        var online = echarts.init(document.getElementById('online'));
        onlineoption = {
            title: {
                text: '24小时订单充值监控统计',
                subtext: '数据来自平台',
                x: 'center'
            },
            xAxis: {
                type: 'category',
                data: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun']
            },
            yAxis: {
                type: 'value'
            },
            series: [{
                data: [820, 932, 901, 934, 1290, 1330, 1320],
                type: 'line'
            }]
        };

        agentoption = {
            title: {
                text: '本月代理冠军分布统计',
                subtext: '数据来自平台',
                x: 'center'
            },
            tooltip: {
                trigger: 'item',
                formatter: "{a} <br/>{b} : {c} ({d}%)"
            },
            legend: {
                orient: 'vertical',
                left: 'left',
                data: ['直接访问', '邮件营销', '联盟广告', '视频广告', '搜索引擎']
            },
            series: [
                {
                    name: '访问来源',
                    type: 'pie',
                    radius: '55%',
                    center: ['50%', '60%'],
                    data: [
                        { value: 335, name: '直接访问' },
                        { value: 310, name: '邮件营销' },
                        { value: 234, name: '联盟广告' },
                        { value: 135, name: '视频广告' },
                        { value: 1548, name: '搜索引擎' }
                    ],
                    itemStyle: {
                        emphasis: {
                            shadowBlur: 10,
                            shadowOffsetX: 0,
                            shadowColor: 'rgba(0, 0, 0, 0.5)'
                        }
                    }
                }
            ]
        };
        option = {
            title: {
                text: '销售记录条形统计图',
                subtext: '数据来自平台'
            },
            tooltip: {
                trigger: 'axis',
                axisPointer: {
                    type: 'shadow'
                }
            },
            legend: {
                data: ['上个月', '本月']
            },
            grid: {
                left: '3%',
                right: '4%',
                bottom: '3%',
                containLabel: true
            },
            xAxis: {
                type: 'value',
                boundaryGap: [0, 0.01]
            },
            yAxis: {
                type: 'category',
                data: ['用户充值', '用户消费', '用户提现']
            },
            series: [
                {
                    name: '上个月',
                    type: 'bar',
                    data: [18203, 23489, 29034]
                },
                {
                    name: '本月',
                    type: 'bar',
                    data: [19325, 23438, 31000]
                }
            ]
        };
        agent.setOption(agentoption);
        myChart.setOption(option);
        online.setOption(onlineoption);
    </script>
</body>
</html>
